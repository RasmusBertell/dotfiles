#!/usr/bin/env zsh

# XDG specification
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"

# PATH
export PATH="$PATH:$XDG_DATA_HOME/bin"
export PATH="$PATH:$XDG_DATA_HOME/cargo/bin"

# Mako
export XDG_CURRENT_DESKTOP="Unity"

# Environment
export XKB_DEFAULT_LAYOUT="fi"

# Editor
export EDITOR="nvim"
export VISUAL="nvim"
export PAGER="nvim -R"
export MANPAGER="nvim -c 'set ft=man' -"
export BAT_PAGER="less"

# History
export HISTFILE="$XDG_CACHE_HOME/zsh/history"
export HISTSIZE={{history}}
export SAVEHIST={{history}}

# Firefox
export MOZ_ENABLE_WAYLAND=1

# Starship
export STARSHIP_CONFIG="$XDG_CONFIG_HOME/starship/config"

# Taskwarrior
export TASKRC="$XDG_CONFIG_HOME/task/config"
export TASKDATA="$XDG_DATA_HOME/task"

# Timewarrior
export TIMEWARRIORDB="$XDG_DATA_HOME/timew"

# Rust
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"

# i3status-rs
export I3RS_GITHUB_TOKEN="{{github_token}}"

# GPG & Pass
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/pass"

# Go
export GOPATH="$XDG_DATA_HOME/go"
